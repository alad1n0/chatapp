<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPrivacyPolicyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/textPrivacyPolicyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At MyApplicationChat, we value your privacy. This Privacy Policy outlines how we collect, use, and protect your personal information when you use our application. We ensure that all personal data is handled with the utmost care and respect for your privacy."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_background"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/textDataCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Data Collection: We collect personal information such as your name, email address, and profile picture when you sign up for our service. We also collect data on your usage of the app, including interactions with other users, shared content, and device information."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_background"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/textDataUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Data Usage: The information we collect is used to provide and improve our service. This includes delivering messages, personalizing your experience, and ensuring security across the platform. We do not share your personal information with third parties, except when required by law."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_background"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/textDataProtection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Data Protection: We use industry-standard security measures to protect your information from unauthorized access, disclosure, alteration, or destruction. We regularly review and update our security practices to keep your data safe."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_background"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/textContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you have any questions about this Privacy Policy, please contact us at support@myapplicationchat.com."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_background"
                android:padding="12dp"/>
            <TextView
                android:id="@+id/textPolicyVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Policy Version: 1.0.0"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="16dp"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
